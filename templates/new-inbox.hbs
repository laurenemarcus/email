<div class="panel panel-default">
  <div class="panel-heading">Create New Inbox Message</div>
  <div class="col-md-3 panel-body">
    <form>
      <div class="form-group">
        <label for="senderEmail">Sender Email Address</label>
        {{input value=senderEmail id="senderEmail" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="senderSubject">Subject</label>
        {{input value=senderSubject id="senderSubject" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="senderBody">Body</label>
        {{textarea value=senderBody id="senderBody" class="form-control" rows="10"}}
      </div>

      <button class="btn btn-primary" {{action 'save'}}>Save to Inbox</button>
    </form>
  </div>
</div>
