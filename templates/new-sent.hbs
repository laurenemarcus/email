<form>
  <div class="form-group">
    <label for="sentEmail">Your Email Address</label>
    {{input value=sentEmail id="sentEmail" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="sentSubject">Subject</label>
    {{input value=sentSubject id="sentSubject" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="sentBody">Body</label>
    {{input value=sentBody id="sentBody" class="form-control"}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Send</button>
</form>
