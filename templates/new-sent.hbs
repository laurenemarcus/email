<div class="panel panel-default">
<div class="panel-heading">New Message</div>
<div class="panel-body">
<form>
  <div class="form-group">
    <label for="sentEmail">To</label>
    {{input value=sentEmail id="sentEmail" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="sentSubject">Subject</label>
    {{input value=sentSubject id="sentSubject" class="form-control"}}
  </div>
  <div class="form-group">
    {{textarea value=sentBody id="sentBody" class="form-control" rows="10"}}
  </div>

  <button class="btn" {{action 'save'}}>Send</button>
</form>
</div>
</div>
